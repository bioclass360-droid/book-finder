    <script>
        let userChoices = { cat: '', mood: '' };

        // --- DATABASE: Updated with High-Selling Categories ---
        const books = [
            // WEALTH & SUCCESS
            { cat: 'wealth', mood: 'easy', title: 'The Psychology of Money', author: 'Morgan Housel', 
              desc: '19 short stories about how people think about money. No complex math, just pure wisdom on wealth.',
              tags: ['#Finance', '#Bestseller'], link: 'https://www.amazon.in/s?k=Psychology+of+Money' },
            
            { cat: 'wealth', mood: 'deep', title: 'Zero to One', author: 'Peter Thiel', 
              desc: 'The ultimate guide to building a startup and creating the future. Dense, contrarian, and brilliant.',
              tags: ['#Startups', '#Business'], link: 'https://www.amazon.in/s?k=Zero+to+One' },

            // PSYCHOLOGY
            { cat: 'mind', mood: 'easy', title: 'Atomic Habits', author: 'James Clear', 
              desc: 'The most practical book ever written on changing your life. Small changes, massive results.',
              tags: ['#SelfHelp', '#LifeHacks'], link: 'https://www.amazon.in/s?k=Atomic+Habits' },

            { cat: 'mind', mood: 'deep', title: 'The Laws of Human Nature', author: 'Robert Greene', 
              desc: 'A massive, detailed guide to understanding why people do what they do. Master manipulation and social dynamics.',
              tags: ['#Power', '#Psychology'], link: 'https://www.amazon.in/s?k=The+Laws+of+Human+Nature' },

            // MYSTERY / THRILLER (Replaces Biology)
            { cat: 'thriller', mood: 'easy', title: 'The Silent Patient', author: 'Alex Michaelides', 
              desc: 'A woman shoots her husband 5 times in the face, then never speaks another word. Why? The ending will shock you.',
              tags: ['#Thriller', '#PageTurner'], link: 'https://www.amazon.in/s?k=The+Silent+Patient' },

            { cat: 'thriller', mood: 'deep', title: 'Gone Girl', author: 'Gillian Flynn', 
              desc: 'A dark, twisted masterpiece about a marriage gone wrong. Complex characters and a mind-bending plot.',
              tags: ['#Dark', '#Mystery'], link: 'https://www.amazon.in/s?k=Gone+Girl' },

            // ROMANCE / DRAMA (Replaces Fiction)
            { cat: 'romance', mood: 'easy', title: 'It Ends with Us', author: 'Colleen Hoover', 
              desc: 'The book that broke the internet. An emotional rollercoaster about love, heartbreak, and resilience.',
              tags: ['#Romance', '#TikTokFamous'], link: 'https://www.amazon.in/s?k=It+Ends+with+Us' },

            { cat: 'romance', mood: 'deep', title: 'The Kite Runner', author: 'Khaled Hosseini', 
              desc: 'A heartbreaking story of friendship and betrayal in Afghanistan. It will make you cry. Beautifully written.',
              tags: ['#Classic', '#Emotional'], link: 'https://www.amazon.in/s?k=The+Kite+Runner' }
        ];

        // --- LOGIC ---
        function nextStep(n) {
            document.querySelectorAll('.step').forEach(el => el.classList.remove('active'));
            document.getElementById('step-' + n).classList.add('active');
        }

        function selectCat(c) { userChoices.cat = c; nextStep(2); }
        function selectMood(m) { userChoices.mood = m; findResult(); }

        function findResult() {
            let match = books.find(b => b.cat === userChoices.cat && b.mood === userChoices.mood);
            if (!match) match = books[0]; 

            document.getElementById('res-title').innerText = match.title;
            document.getElementById('res-author').innerText = 'by ' + match.author;
            document.getElementById('res-desc').innerText = match.desc;
            document.getElementById('res-link').href = match.link;
            document.getElementById('tag-1').innerText = match.tags[0];
            document.getElementById('tag-2').innerText = match.tags[1];

            nextStep('result');
        }
    </script>
